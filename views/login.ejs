<%- include('header') -%>
    <link rel="stylesheet" href="css/loginpage.css" />
    <title>Document</title>
  </head>
  <body>
    <div class="w3-container w3-half w3-margin-top">
      <form class="w3-container w3-card-4 sign-sheet" action="/" method="post">
        <h1>欢迎登录</h1>

        <p>
          <label>用户名</label>
          <input
            class="w3-input"
            name="username"
            type="text"
            style="width: 90%"
            required
          />
        </p>
        <p>
          <label>密码</label>
          <input
            class="w3-input"
            name="password"
            type="password"
            style="width: 90%"
            required
          />
        </p>

        <p>
          <button class="w3-button w3-section w3-teal w3-ripple">Log in</button>
        </p>
        <p class="sign_alert"><%=signAlert%></p>
      </form>
    </div>

    <script src="js/script.js"></script>
  </body>
</html>
